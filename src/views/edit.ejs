<% include partials/_header %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="marca" placeholder="marca" value="<%= task.marca %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="precio" placeholder="precio" value="<%= task.precio %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="material" placeholder="material" value="<%= task.material %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="tipo" placeholder="tipo" value="<%= task.tipo %>">
            </div>
            <button class="btn btn-primary" type="submit">
              Update 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer%>
